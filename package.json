{
  "name": "valgen",
  "description": "Fast runtime type validator, converter and io (encoding/decoding) library",
  "version": "5.1.0",
  "author": "Panates",
  "private": true,
  "contributors": [
    "Eray Hanoglu <e.hanoglu@panates.com>"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/panates/valgen.git"
  },
  "dependencies": {
    "@types/validator": "^13.11.7",
    "date-fns": "^3.0.6",
    "ts-gems": "^3.1.0",
    "validator": "^13.11.0"
  },
  "devDependencies": {
    "@babel/eslint-parser": "^7.23.3",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.5",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "auto-changelog": "^2.4.0",
    "eslint": "^8.56.0",
    "eslint-config-google": "^0.14.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-security": "^2.1.0",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "eslint-plugin-unused-imports": "^3.0.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "ts-cleanup": "^0.2.6",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.3"
  },
  "scripts": {
    "lint": "eslint .",
    "clean": "npm run clean:src && npm run clean:dist",
    "clean:dist": "rimraf build coverage",
    "clean:src": "ts-cleanup -s src --all | ts-cleanup -s test",
    "prebuild": "npm run clean:dist && npm run lint",
    "build": "npm run build:cjs && npm run build:esm",
    "build:cjs": "tsc -b tsconfig-build-cjs.json",
    "build:esm": "tsc -b tsconfig-build-esm.json",
    "postbuild": "npm run postbuild:copyfiles && node ./support/postbuild.cjs",
    "postbuild:copyfiles": "cp ./support/package.cjs.json ./build/cjs/package.json && cp LICENSE README.md CHANGELOG.md ./build",
    "test": "jest",
    "precover": "rimraf coverage",
    "cover": "jest --runInBand --detectOpenHandles --coverage",
    "precitest": "rimraf coverage",
    "citest": "jest --coverage --coverageReporters=lcov",
    "version": "auto-changelog -p --starting-version v4.0.0 && git add CHANGELOG.md"
  },
  "type": "module",
  "types": "typings/index.d.ts",
  "exports": {
    ".": {
      "require": "./cjs/index.js",
      "default": "./esm/index.js"
    },
    "./cjs": "./cjs/index.js",
    "./esm": "./esm/index.js"
  },
  "engines": {
    "node": ">= 16.0"
  },
  "files": [
    "cjs/",
    "esm/",
    "typings/",
    "LICENSE",
    "README.md",
    "CHANGELOG.md"
  ],
  "keywords": [
    "validate",
    "validation",
    "validator",
    "check",
    "encoding",
    "decoding",
    "coerce",
    "convert",
    "converter",
    "transform",
    "type"
  ]
}
